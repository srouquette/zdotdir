#! /usr/bin/env bash
has_cmd() {
	for opt in "$@"; do
		if command -v "$opt" >/dev/null; then
			continue
		else
			return $?
		fi
	done
}

render_text() {
	if has_cmd bat; then
    bat --color=always $*
  else
    cat --color=always $*
  fi
}

mime=$(file -Lbs --mime-type "$1")
category=${mime%%/*}
kind=${mime##*/}
ext=${1##*.}

echo $ext

if [ -d "$1" ]; then
	if has_cmd eza; then
		eza -lh --group-directories-first --color=always --color-scale all --git --icons --hyperlink --octal-permissions "$1"
	else
		ls -lh --group-directories-first --color=always "$1"
	fi

elif [ "$kind" = pdf ]; then
	if has_cmd pdftotext sed; then
		pdftotext -q "$1" - | sed "s/\f/$(hr â”€)\n/g"
	fi

elif [ "$kind" = rfc822 ]; then
		render_text -lEmail "$1"

elif [ "$kind" = javascript ]; then
  render_text -ljs "$1"

elif [ "$category" = image ]; then
	if has_cmd viu; then
		[ -n "$FZF_PREVIEW_COLUMNS" ] && viu "$1" --width $FZF_PREVIEW_COLUMNS || viu "$1"
	elif has_cmd chafa; then
		chafa -f symbols "$1"
	fi
	if has_cmd exiftool; then
		exiftool "$1" | render_text -plyaml
	fi

elif [ "$ext" = md ]; then
	if has_cmd mdcat; then
		mdcat "$1"
	elif has_cmd glow; then
		glow "$1"
	elif has_cmd paper; then
		paper --hide-urls "$1"
	else
    render_text "$1"
	fi

elif [ "$category" = text ]; then
    render_text "$1"
else
	exit 1
fi
